	int n = 5;
		
		int row = 1;
		int nsp = n-1;
		int nst = 1;
		
		
		while(row <= n)
		{
			//Work
			int csp = 1;
			while(csp <= nsp)
			{
				System.out.print("  ");
				csp += 1;
			}
			
			int cst = 1;
			while(cst <= nst)
			{
			  System.out.print("1 ");
			  cst+=1;
					}
			
			//Update
			nsp -= 1;
			nst += 2;
			
			row += 1;
			System.out.println();
			
			
			
		}


